<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <color name="textBackground">#18182E</color>
  <color name="textSecondary">#8F939E</color>
  <color name="textInactive">#4F525C</color>
  <color name="textColorMain">@color/white</color>
  <color name="btnDegreesType">#196E59</color>
  <color name="background">@color/darkest_blue</color>

  <style name="Theme.Weather" parent="Theme.AppCompat.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/blue</item>
    <item name="colorPrimaryVariant">@color/dark_blue</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/blue</item>
    <item name="colorSecondaryVariant">@color/dark_blue</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Android defaults. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="android:textColorPrimary">@color/white</item>
  </style>
</resources>
